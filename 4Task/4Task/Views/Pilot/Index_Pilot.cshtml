@model IEnumerable<_4Task.Models.Pilot>
@{
    //ViewData["Title"] = "Список смартфонов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Пилоты</title>
</head>
<body>
    <h3>Пилоты</h3>
    <form asp-controller="Pilot" asp-action="Index_pilot">
        <p>
            <input type="text" name="SearchString">
            <input type="submit" value="Поиск" />
        </p>
    </form>
    <p>
        <a asp-action="Create_pilot">Добавить</a>
    </p>
    <table>
        <tr>
            <td>Имя</td>
        </tr>
        @foreach (var pilot in Model)
        {
            <tr>
                <td>@pilot.name</td>
                <td>
                    <button>
                        <a href="~/Pilot/Details/@pilot.id">Детали</a>
                    </button>
                </td>
                <td>
                    <button>
                        <a href="~/Pilot/Edit_pilot/@pilot.id">Изменить</a>
                    </button>
                </td>
                <td>
                    <button>
                        <a href="~/Pilot/Delete_pilot/@pilot.id">Удалить</a>
                    </button>
                </td>
            </tr>
        }
    </table>
</body>
</html>